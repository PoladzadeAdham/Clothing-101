@model ProductCreateVm

<form method="post" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label for="Title"> Title</label>
        <input class="form-control" asp-for="Title" placeholder="Enter Title">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label for="Description"> Description</label>
        <input class="form-control" asp-for="Description" placeholder="Enter Description">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label for="Price"> Price</label>
        <input class="form-control" asp-for="Price" placeholder="Enter Price">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label for="Rating"> Rating</label>
        <input class="form-control" asp-for="Rating" placeholder="Enter Rating">
        <span class="text-danger" asp-validation-for="Rating"></span>
    </div>

    <div class="form-group">
        <select class="form-control" asp-for="CategoryId">

            @foreach (Category category in ViewBag.Categories)
            {
                <option value="@category.Id" >@category.Name</option>
                
            }

        </select>


    </div>
    
    <div class="form-group">
        <label for="Rating"> ReviewCount</label>
        <input class="form-control" asp-for="ReviewCount" placeholder="Enter ReviewCount">
        <span class="text-danger" asp-validation-for="ReviewCount"></span>
    </div> 
    
    <div class="form-group">
        <label for="Image"> Image</label>
        <input class="form-control" asp-for="Image" placeholder="Enter Image">
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>