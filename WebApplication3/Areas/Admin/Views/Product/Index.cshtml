@model List<ProductGetVm>

<table class="table">
    <thead>
        <a asp-action="Create" asp-controller="Product" class="btn btn-success">Create</a>

        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            <th scope="col">Price</th>
            <th scope="col">CategoryName</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>
                    <img src="~/assets/images/@product.ImagePath" style="width: 50px; height: 50px" />
                </td>
                <td>@product.Price</td>
                <td>@product.CategoryName</td>
                <td>
                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Update</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>


            </tr>

        }


    </tbody>
</table>